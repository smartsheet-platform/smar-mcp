{
  "branches": ["main"],
  "plugins": [
    ["@semantic-release/commit-analyzer", {
      "preset": "conventionalcommits",
      "releaseRules": [
        {"type": "docs", "scope": "README", "release": "patch"},
        {"type": "refactor", "release": "patch"},
        {"type": "style", "release": "patch"},
        {"type": "perf", "release": "patch"}
      ],
      "parserOpts": {
        "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
      }
    }],
    ["@semantic-release/release-notes-generator", {
      "preset": "conventionalcommits",
      "presetConfig": {
        "types": [
          {"type": "feat", "section": "‚ú® Features"},
          {"type": "fix", "section": "üêõ Bug Fixes"},
          {"type": "docs", "section": "üìö Documentation"},
          {"type": "style", "section": "üíÑ Styles"},
          {"type": "refactor", "section": "‚ôªÔ∏è Code Refactoring"},
          {"type": "perf", "section": "‚ö° Performance Improvements"},
          {"type": "test", "section": "‚úÖ Tests"},
          {"type": "build", "section": "üõ†Ô∏è Build System"},
          {"type": "ci", "section": "‚öôÔ∏è CI"},
          {"type": "chore", "section": "üßπ Chores"}
        ]
      }
    }],
    ["@semantic-release/changelog", {
      "changelogFile": "CHANGELOG.md",
      "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file."
    }],
    ["@semantic-release/npm", {
      "npmPublish": true
    }],
    ["@semantic-release/github", {
      "assets": [
        {"path": "dist/**/*.{js,map}", "label": "Distribution"},
        {"path": "CHANGELOG.md", "label": "Changelog"}
      ],
      "successComment": "üéâ This ${issue.pull_request ? 'PR is included' : 'issue is fixed'} in version ${nextRelease.version} üéâ\n\nThe release is available on:\n- [npm](https://www.npmjs.com/package/@smartsheet/smar-mcp/v/${nextRelease.version})\n- [GitHub release](${nextRelease.gitHead})"
    }],
    ["@semantic-release/git", {
      "assets": ["package.json", "package-lock.json", "CHANGELOG.md"],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
    }]
  ]
}